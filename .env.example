# Database
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-here"

# Fal.ai API
FAL_API_KEY="your-fal-api-key"

# Blob Storage (Vercel Blob)
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# PayPal Payment Integration
# Get your credentials from: https://developer.paypal.com
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox" # sandbox or live

# Email Service (Resend)
# Get your API key from: https://resend.com
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Public App URL (for PayPal return URLs, emails, and all links)
# Development: http://localhost:3000
# Production: https://thevectorcraft.com
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Facebook Pixel & Conversions API
# Get your Pixel ID from: https://business.facebook.com/events_manager
# Get your Access Token from: Events Manager > Settings > Conversions API > Generate Access Token
NEXT_PUBLIC_FB_PIXEL_ID="your-facebook-pixel-id"
FB_CONVERSION_API_TOKEN="your-conversion-api-access-token"
